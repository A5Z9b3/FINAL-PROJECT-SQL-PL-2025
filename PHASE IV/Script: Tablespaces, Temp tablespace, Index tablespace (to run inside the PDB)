-- file: 02_create_tablespaces.sql
-- Connect to the PDB as SYS or as SYS with:
-- sqlplus sys/@PDBNAME as sysdba
-- or: ALTER SESSION SET CONTAINER = :PDB_NAME;

-- Replace :ORACLE_BASE_DIR and :PDB_NAME appropriately

CREATE TABLESPACE data_ts
 DATAFILE ':ORACLE_BASE_DIR/:PDB_NAME/data01.dbf' SIZE 2G
 AUTOEXTEND ON NEXT 200M MAXSIZE UNLIMITED
 EXTENT MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT AUTO;

CREATE TABLESPACE index_ts
 DATAFILE ':ORACLE_BASE_DIR/:PDB_NAME/index01.dbf' SIZE 1G
 AUTOEXTEND ON NEXT 100M MAXSIZE UNLIMITED
 EXTENT MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT AUTO;

CREATE TEMPORARY TABLESPACE temp_ts
 TEMPFILE ':ORACLE_BASE_DIR/:PDB_NAME/temp01.dbf' SIZE 1G
 AUTOEXTEND ON NEXT 100M MAXSIZE 8G
 EXTENT MANAGEMENT LOCAL UNIFORM SIZE 1M;

-- Optional: a small undo tablespace if not using automatic undo in CDB-managed architecture
-- CREATE UNDO TABLESPACE undots
-- DATAFILE ':ORACLE_BASE_DIR/:PDB_NAME/undo01.dbf' SIZE 1G AUTOEXTEND ON NEXT 100M MAXSIZE 4G;
