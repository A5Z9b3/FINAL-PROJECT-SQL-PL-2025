
CREATE OR REPLACE PROCEDURE update_equipment_status(
    p_equipment_id IN NUMBER,
    p_status IN VARCHAR2
) AS
BEGIN
    UPDATE Equipment
    SET Status = p_status
    WHERE EquipmentID = p_equipment_id;

    COMMIT;
EXCEPTION
    WHEN OTHERS THEN
        DBMS_OUTPUT.PUT_LINE('Error updating equipment status: ' || SQLERRM);
        ROLLBACK;
END;
/
